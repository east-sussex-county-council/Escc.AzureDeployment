<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="TransformWebConfig" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <UsingTask TaskName="TransformXml" AssemblyFile="$(MSBuildExtensionsPath)\Microsoft\VisualStudio\v10.0\Web\Microsoft.Web.Publishing.Tasks.dll"/>
  <!-- Work on a copy of the file to avoid file locking problem. Use 'temp' as a prefix rather than suffix so that protected .config extension is still there. -->
  <Target Name="TransformWebConfig">
    <Copy SourceFiles="$(TransformInputFile)" DestinationFiles="temp.$(TransformInputFile)" />
    <TransformXml Source="temp.$(TransformInputFile)" Transform="$(TransformFile)" Destination="$(TransformOutputFile)" />
    <Delete Files="temp.$(TransformInputFile)" />
  </Target>
</Project>